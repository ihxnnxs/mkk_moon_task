        "/api/token": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Получить токен",
                "description": "Получить токен для доступа к API",
                "operationId": "getToken",
                "responses": {
                    "200": {
                        "description": "Токен успешно создан",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "1|abcdef123456789"
                                        },
                                        "type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
